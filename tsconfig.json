{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "incremental": true,
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src/typescript",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true
  },
  "exclude": [
    "test/**",
    "node_modules",
    "babel.config.cjs",
    "jest.config.mjs",
    "dist",
    "webpack.config.cjs",
    "coverage"
  ]
}
