{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "incremental": true,
    "lib": [
      "ES6",
      "DOM",
    ],
    "allowJs": true,
    "strict": true,
    "outDir": "./src",
    "rootDir": "./src/typescript",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "test/**",
    "node_modules",
    "babel.config.js",
    "jest.config.mjs",
    "src/*.js"
  ]
}