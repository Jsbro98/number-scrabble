{
  "compilerOptions": {
    "incremental": true,
    "lib": [
      "ES6",
      "ES7",
      "ES5",
      "DOM",
      "ScriptHost"
    ],
    "outDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "test/**"
  ]
}